<h1>Books</h1>
<table>
  <tr>
    <th>title</th>
    <th>body</th>
    <th>show</th>
    <th>edit</th>
    <th>destroy</th>
  </tr>
  
  <% @books.each do |book| %>
  <tr>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
  <td><%= link_to "Show", book_path(book.id) %></td>
  <td>edit</td>
  <td>destroy</td>
  <% end %>
  </tr>
</table>


<h2>New book</h2>
<%= form_with model: @book, url: books_path, method: :post do |f| %>
<p>title</p>
<%= f.text_field :title %>
<p>body</p>
<%= f.text_area :body %><br>
<%=f.submit 'Create Book' %>
<% end %>
