<div class="edit-box">
<h1>Editing Book</h1>


<% if @book.errors.any? %>
  <div class="error-box">
    <b><%= @book.errors.count %>errors prohibited this book from being saved: </b>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li class="error-message"><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_with model: @book do |f| %>
<p class="form-label">Title</p>
<%= f.text_field :title %>
<p class="form-label">Body</p>
<%= f.text_area :body %><br>
<%= f.submit 'Update Book', class: "post-btn" %>
<% end %>
</div>

<div class="link-box">
  <%= link_to 'Show', book_path(@book.id), class: "btn" %> | <%= link_to 'Back', books_path, class: "btn" %>
</div>
